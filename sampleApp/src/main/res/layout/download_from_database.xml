<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:padding="4dp"
        android:id="@+id/downloadNameTv"
        android:maxLines="1"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="sldkfjlksjdf"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="4dp"
        android:id="@+id/downloadFilePathTv"
        android:maxLines="3"
        android:text="c:/download/filepath/dir/67Angel.mp4"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="4dp"
        android:id="@+id/downloadStatusTv"
        android:maxLines="3"
        android:text="DOWNLOADED"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="4dp"
        android:id="@+id/downloadedTotalTv"
        android:maxLines="3"
        android:textColor="@color/black"
        android:text="DOWNLOADED"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:text="32 %"
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/tapToStartDownload"
        android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>